/*============================================================================*/
/* Includes                                                                   */
/*============================================================================*/
#ifndef DEBUG_H_
#define DEBUG_H_

/*============================================================================*/
/* Forward declarations                                                       */
/*============================================================================*/

/*============================================================================*/
/* Constants and macros                                                       */
/*============================================================================*/

#define DEBUG_UART				(&huart1)   /**< Debug serial port */
#define DBG_BAUDRATE			115200      /**< Debug baudrate */
#define DEBUG_TX_BUFFER_SIZE	256         /**< Debug tx buffer size*/

/*============================================================================*/
/* Type definitions                                                           */
/*============================================================================*/

/*============================================================================*/
/* Global data                                                                */
/*============================================================================*/

/*============================================================================*/
/* Declarations                                                               */
/*============================================================================*/

/**
 * @brief debug_init
 * 
 */
void debug_init();

#ifdef RTDEBUG
#define dbg_tx(data,len) 	HAL_UART_Transmit_DMA(DEBUG_UART,(unsigned char *)data,len)
#define dbg_printf(...)		printf(__VA_ARGS__ );
#else
#define dbg_tx(data,len) 	while(0)
#define dbg_printf(...)		while(0)
#define debug_init()		while(0)
#endif



#endif /* DEBUG_H_ */
/**@}*/
